                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                        </HBox>
                        
                        <!-- TableView with Fresh Styling -->
                        <TableView fx:id="tvTasks" prefHeight="440.0" prefWidth="710.0" style="-fx-background-color: #021526; -fx-background-radius: 10; -fx-border-color: #6EACDA; -fx-border-radius: 10; -fx-border-width: 2; -fx-table-cell-border-color: #6EACDA;">
                            <columns>
                                <TableColumn fx:id="colTitle" prefWidth="150.0" text="Nama Task" />
                                <TableColumn fx:id="colDeadline" prefWidth="120.0" text="Deadline" />
                                <TableColumn fx:id="colDescription" prefWidth="220.0" text="Deskripsi" />
                                <TableColumn fx:id="colCompleted" prefWidth="90.0" text="Status" />
                                <TableColumn fx:id="colEditDelete" prefWidth="130.0" text="Actions" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
