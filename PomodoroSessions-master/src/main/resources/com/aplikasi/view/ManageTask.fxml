<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #021526;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aplikasi.view.ManageTaskController">
    <children>
        <!-- Sidebar Navigation -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="250.0" spacing="0.0" style="-fx-background-color: #03346E;">
            <children>
                <!-- App Logo/Title -->
                <VBox alignment="CENTER" prefHeight="120.0" prefWidth="250.0" style="-fx-background-color: #021526;">
                    <children>
                        <Label text="Pomodo+" textFill="#E2E2B6">
