<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.23" prefHeight="500.0" prefWidth="800.0"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.aplikasi.view.TimerController">

    <items>
        <!-- Sidebar kiri -->
        <AnchorPane>
            <children>
                <VBox prefHeight="499.0" prefWidth="180.0" alignment="TOP_CENTER" spacing="12" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
                    <children>
                        <Label text="NAVIGATION" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                        <Button text="Timer" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                        <Button fx:id="btnGoToManageTask" text="Task Management" prefWidth="140"/>
                        <Button fx:id="btnGoToReport" text="Report" prefWidth="140"/>
                    </children>
                </VBox>
            </children>
        </AnchorPane>

        <!-- Konten kanan -->
        <AnchorPane>
            <children>
                <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="10.0" spacing="16" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                    <!-- Timer display -->
                    <Label fx:id="labelTimer" style="-fx-font-size: 56px; -fx-font-weight: bold;" text="25:00" />

                    <!-- Spinner Fokus -->
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="Durasi Fokus (menit):" />
                        <Spinner fx:id="spinnerMinutes" prefWidth="100"/>
                    </HBox>

                    <!-- Spinner Break -->
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="Durasi Break (menit):" />
                        <Spinner fx:id="spinnerBreak" prefWidth="100"/>
                    </HBox>

                    <!-- Tombol Kontrol -->
                    <HBox alignment="CENTER" spacing="12">
                        <Button fx:id="btnStart" onAction="#handleStart" text="Start" prefWidth="90" />
                        <Button fx:id="btnPause" onAction="#handlePause" text="Pause" prefWidth="90" />
                        <Button fx:id="btnReset" onAction="#handleReset" text="Reset" prefWidth="90" />
                    </HBox>

                    <!-- Status Task -->
                    <Label fx:id="labelTask" text="Working On: -" style="-fx-font-size: 14px;" />

                    <!-- Daftar Pending Task -->
                    <Label text="Pending Task" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <ListView fx:id="taskListView" prefHeight="200.0" prefWidth="520.0" />
                </VBox>
            </children>
        </AnchorPane>
    </items>
</SplitPane>
