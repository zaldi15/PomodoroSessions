<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.23" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aplikasi.view.TimerController">

    <items>

        <!-- ================= Sidebar kiri (Samakan MenuUtama.fxml) ================= -->
        <AnchorPane>
            <children>
                <VBox prefHeight="399.0" prefWidth="140.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="100.0" prefWidth="140.0" text="NAVIAGTION" />

                        <Button fx:id="btn" prefHeight="50.0" prefWidth="140.0" text="Timer" />

                        <Button fx:id="btnGoToManageTask" onAction="#handleGoToManageTask" prefHeight="50.0" prefWidth="140.0" text="Task Management" />

                        <Button fx:id="btnGoToReport" mnemonicParsing="false" onAction="#handleGoToReport" prefHeight="50.0" prefWidth="140.0" text="Report" />

                        
                    </children>
                </VBox>
            </children>
        </AnchorPane>

        <!-- ================= Konten kanan (Timer UI) ================= -->
        <AnchorPane>
            <children>
                <VBox alignment="CENTER" layoutX="50.0" layoutY="40.0" prefHeight="331.0" prefWidth="331.0" spacing="20">

                    <Label fx:id="labelTimer" style="-fx-font-size: 48px; -fx-font-weight: bold;" text="25:00" />

                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="btnStart" onAction="#handleStart" text="Start" />
                        <Button fx:id="btnPause" onAction="#handlePause" text="Pause" />
                        <Button fx:id="btnReset" onAction="#handleReset" text="Reset" />
                    </HBox>

                    <Label fx:id="labelTask" style="-fx-font-size: 14px;" text="Working On: Tugas Promlan" />

                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Pending Task" />

                    <ListView fx:id="taskListView" prefHeight="134.0" prefWidth="331.0" />

                </VBox>
            </children>
        </AnchorPane>

    </items>
</SplitPane>
