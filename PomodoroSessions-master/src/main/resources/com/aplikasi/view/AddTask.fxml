<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aplikasi.view.AddTasksController">

    <left>
        <VBox prefHeight="600.0" prefWidth="220.0" spacing="10.0" style="-fx-background-color: #EFEFEF;" BorderPane.alignment="CENTER">
            <children>
                <Label text="NAVIGATION" textFill="#666666">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" top="30.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="btnGoToTimer" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleGoToTimer" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Pomodoro Timer">
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnGoToManageTask" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleGoToManageTask" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: #D3D3D3; -fx-cursor: hand; -fx-font-weight: bold;" text="Task Management">
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnGoToReport" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleGoToReport" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Report">
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="15.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label text="Add New Task" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <HBox spacing="20.0">
                    <children>
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                            <children>
                                <Label text="Task Title" textFill="#666666" />
                                <TextField fx:id="txtTitle" prefHeight="40.0" promptText="e.g., Study OOP" style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5;" />
                            </children>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                            <children>
                                <Label text="Deadline" textFill="#666666" />
                                <DatePicker fx:id="datePickerDeadline" prefHeight="40.0" prefWidth="500.0" style="-fx-background-radius: 5;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Description" textFill="#666666" />
                        <TextArea fx:id="txtDescription" promptText="Enter task details..." style="-fx-background-radius: 5; -fx-border-color: #cccccc; -fx-border-radius: 5;" wrapText="true" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>

                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleAddTask" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" text="Save Task">
                            <padding>
                                <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                            </padding>
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
