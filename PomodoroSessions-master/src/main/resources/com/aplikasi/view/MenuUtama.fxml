<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aplikasi.view.MenuController">
   
   <left>
      <VBox prefHeight="600.0" prefWidth="200.0" spacing="5.0" style="-fx-background-color: #EFEFEF;" BorderPane.alignment="CENTER">
         <children>
            <Label text="NAVIGATION" textFill="#666666">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" top="30.0" />
               </VBox.margin>
            </Label>
            
            <Button fx:id="btnTimer" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleTimer" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Pomodoro Timer">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
            
            <Button fx:id="btnManageTask" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleManageTask" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Task Management">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
            
            <Button fx:id="btnReport" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleReport" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Report">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
            
            <Button fx:id="btnLogout" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleLogout" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-text-fill: red;" text="Logout">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>

   <center>
      <AnchorPane style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" layoutX="250.0" layoutY="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label text="Welcome to Pomodo+" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label text="Please select a menu on the left to start." textFill="#7f8c8d">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
