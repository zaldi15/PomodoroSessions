            </VBox>
            
            <VBox spacing="10.0">
               <children>
                  <Button fx:id="btnSave" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSave" prefHeight="40.0" style="-fx-background-color: #6EACDA; -fx-background-radius: 8; -fx-cursor: hand;" text="ðŸš€ Save Mission" textFill="#021526">
