<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" style="-fx-background-color: #021526;" stylesheets="@../css/ComboBox.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aplikasi.view.AddMissionController">

    <children>
        <VBox layoutX="30" layoutY="30" prefWidth="340" spacing="15">

            <Label text="New Mission" textFill="#E2E2B6">
                <font>
                    <Font name="System Bold" size="24" />
                </font>
            </Label>

            <VBox spacing="5">
                <Label text="Mission Title" textFill="#6EACDA" />
                <TextField fx:id="txtTitle" prefHeight="35" promptText="Enter mission title..." style="-fx-background-color:#03346E; -fx-text-fill:white;" />
            </VBox>

            <VBox spacing="5">
                <Label text="Description" textFill="#6EACDA" />
                <TextArea fx:id="txtDescription" prefHeight="100" promptText="Enter description..." style="-fx-background-color:#03346E; -fx-text-fill:white;" wrapText="true" />
            </VBox>

            <VBox spacing="5">
                <Label text="Target Date" textFill="#6EACDA" />
                <DatePicker fx:id="dpTargetDate" prefHeight="35" prefWidth="343.0" />
            </VBox>

            <VBox spacing="10">
                <Button fx:id="btnSave" maxWidth="1.7976931348623157E308" onAction="#handleSave" prefHeight="40" style="-fx-background-color:#6EACDA; -fx-font-weight:bold;" text="ðŸš€ Save Mission" />

                <Button maxWidth="1.7976931348623157E308" onAction="#handleCancel" prefHeight="30" style="-fx-background-color:transparent; -fx-text-fill:#E2E2B6;" text="Cancel" />
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </VBox>

        </VBox>
    </children>
</AnchorPane>
